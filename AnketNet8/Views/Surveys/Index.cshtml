@{
    ViewData["Title"] = "Anket Filtresi";
}

<h1 class=" mb-4" style="font-size: 2rem; font-weight: bold;">Anket Filtresi</h1>

<div class="container">
    <form asp-action="ShowSurveys" method="post" class="p-4 rounded shadow-sm bg-light">
        <div class="row mb-3">
            <!-- Gender Radio Buttons -->
            <div class="col-md-6">
                <label class="form-label" style="font-size: 1.25rem; font-weight: bold;">Cinsiyet</label>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="gender" value="Male" id="genderMale">
                    <label class="form-check-label" for="genderMale" style="font-size: 1rem;">Erkek</label>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="gender" value="Female" id="genderFemale">
                    <label class="form-check-label" for="genderFemale" style="font-size: 1rem;">Kadın</label>
                </div>
            </div>

            <!-- City Radio Buttons -->
            <div class="col-md-6">
                <label class="form-label" style="font-size: 1.25rem; font-weight: bold;">Şehir</label>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="city" value="Istanbul" id="cityIstanbul">
                    <label class="form-check-label" for="cityIstanbul" style="font-size: 1rem;">Istanbul</label>
                </div>
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" name="city" value="Ankara" id="cityAnkara">
                    <label class="form-check-label" for="cityAnkara" style="font-size: 1rem;">Ankara</label>
                </div>
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5 mt-3" style="font-size: 1.2rem; font-weight: bold;">Anketleri Getir</button>
        </div>
    </form>
</div>